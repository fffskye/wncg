   "source": [
    "n=int(input(\"请输入一个数\"))\n",
    "m=len(str(n))        #算出输入数字的位数\n",
    "s=0\n",
    "b=0\n",
    "for i in range(1,m+1):\n",
    "    a=(n-b)//(10**(m-i))\n",
    "    b=b+(a*10**(m-i))\n",
    "    s=s+(a**m)\n",
    "if s==n:\n",
    "    print(\"这个数为阿姆斯特朗数\")\n",
    "else:\n",
    "    print(\"这个数不为阿姆斯特朗数\")\n"
   ]
  }
