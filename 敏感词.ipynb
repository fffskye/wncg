   "source": [
    "s=input('输入一句话:  ')\n",
    "for mgz in open('敏感字.txt'):#找出保存在敏感字的文件中的敏感字\n",
    "    fw=mgz.rstrip()#rstrip返回删除 string 字符串末尾的空格并生成新字符串。\n",
    "    if fw in s:#判断输入的那句话里是否存在敏感字\n",
    "        fw_len=len(fw)\n",
    "        s=s.replace(fw,'*'*fw_len)  #将s在原处进行修改，进行下一次循环查找。\n",
    "\n",
    "else:\n",
    "           print(s)"
   ]
  }
